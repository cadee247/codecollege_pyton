def create_profile(username, password, user_profile):
    print(f"welcome {username}, \nPlease make sure you keep the following confidential:{password}")


def build_profile(first, last, **user_info):
    user_info['first_name'] = first
    user_info['last_name'] = last
    return user_info

user_profile = build_profile('albert', 'einstein', location='princeton', field='physics')

print(user_profile)